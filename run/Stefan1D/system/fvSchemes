FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      fvSchemes;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

ddtSchemes
{
    default         Euler;
}

gradSchemes
{
    default         leastSquares;
}

divSchemes
{
    div(((rho*U)&devRhoReff))           Gauss linear;
    div(((rho*nuEff)*dev2(T(grad(U))))) Gauss linear;
    // limitedLinear <0..1> -- Koren limiter (more bounded)
    // linearUpwind grad(...) -- 2-order (less bounded)
    div(rhoPhi,U)               Gauss vanLeer;
    div(rhoPhi,h)               Gauss vanLeer;
    div(phi,epsilon)            Gauss upwind;
    div(phi,k)                  Gauss upwind;
    div(phi,T)                  Gauss upwind;
    div(phi,liquidFractionInMetal)     Gauss upwind;
    div(phi,liquidFraction)     Gauss upwind;
    div(phi,alpha.metal)        Gauss upwind;
}

laplacianSchemes
{
    default         Gauss linear corrected;
}

interpolationSchemes
{
    default         linear;
    flux(U)                     linear;
    interpolate(h)              linear;
    interpolate(nHat)           linear;
    interpolate(rho)            linear;
    interpolate(rAU)            linear;
    interpolate(kappa)          linear;
    interpolate(Cp)             linear;
    interpolate(vapourPressure) linear; // Should be harmonic, when evaporation is considered
    dotInterpolate(S,U_0)       linear;
    interpolate((rho*rAU))      linear;
    flux(HbyA)                  linear;
    interpolate((sigma*interfaceProperties:K)) linear;
    interpolate(HsPrimeAlphaG)  linear;
    // in case of dynamicFvMesh only
    interpolate(U)              linear;
    interpolate(liquidFraction) linear;
}

snGradSchemes
{
    default         limited corrected 0.0;
}

// ************************************************************************* //
